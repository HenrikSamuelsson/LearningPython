is_number = False
num = 0

while not is_number:
    is_number = True
    try:
        num = int(input("Enter a number: "))
    except ValueError:
        print("I said a number!")
        is_number = False

        if num % 2 == 0:
            print("Your number is divisible by 2")
            elif num % 3 == 0:
            print("Your number is divisible by 3 ")